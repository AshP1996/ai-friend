#!/usr/bin/env python3
"""
AI Friend System - Main Entry Point
FIXED: Proper error handling for all response scenarios
"""

import asyncio
import argparse
from core import AIFriend
from utils.logger import Logger
from config import settings

logger = Logger("Main")

async def interactive_mode():
    """Interactive chat mode with voice and text"""
    ai_friend = AIFriend()
    
    print("=" * 60)
    print("AI FRIEND SYSTEM - Interactive Mode")
    print("=" * 60)
    
    # Initialize
    logger.info("Initializing AI Friend...")
    try:
        await ai_friend.initialize()
        await ai_friend.start_conversation()
    except Exception as e:
        logger.error(f"Initialization failed: {e}")
        print(f"\n‚ùå Failed to initialize: {e}")
        return
    
    print("\nAI Friend is ready!")
    print("Commands:")
    print("  'voice' - Switch to voice mode")
    print("  'text' - Switch to text mode")
    print("  'summary' - Show conversation summary")
    print("  'quit' - Exit")
    print("\nType your message or command:\n")
    
    mode = "text"
    
    while True:
        try:
            if mode == "text":
                user_input = input("You: ").strip()
                
                if not user_input:
                    continue
                
                if user_input.lower() == 'quit':
                    print("Goodbye! üëã")
                    break
                elif user_input.lower() == 'voice':
                    mode = "voice"
                    print("Switched to voice mode. Say something or type 'text' to switch back...")
                    continue
                elif user_input.lower() == 'summary':
                    try:
                        summary = await ai_friend.get_conversation_summary()
                        print(f"\nConversation Summary:")
                        print(f"  Messages: {summary.get('stats', {}).get('message_count', 0)}")
                        print(f"  Avg Processing: {summary.get('stats', {}).get('avg_processing_time', 0):.3f}s\n")
                    except Exception as e:
                        logger.error(f"Summary error: {e}")
                        print(f"Error getting summary: {e}\n")
                    continue
                
                # Process text message
                try:
                    result = await ai_friend.chat(user_input)
                    
                    # Safe access to result
                    response = result.get('response', 'Sorry, I had trouble generating a response.')
                    emotion_data = result.get('emotion', {})
                    emotion = emotion_data.get('emotion', 'neutral') if isinstance(emotion_data, dict) else 'neutral'
                    processing_time = result.get('processing_time', 0)
                    memories_used = result.get('memories_used', 0)
                    
                    print(f"\nAI Friend [{emotion}]: {response}")
                    print(f"[Processing: {processing_time:.3f}s, Memories: {memories_used}]\n")
                    
                except Exception as e:
                    logger.error(f"Chat error: {e}")
                    import traceback
                    traceback.print_exc()
                    print(f"\n‚ùå Error: {e}")
                    print("I'm having trouble right now. Please try again.\n")
            
            else:  # voice mode
                text_check = input("(Press Enter to listen, or type 'text' to switch): ").strip()
                
                if text_check.lower() == 'text':
                    mode = "text"
                    print("Switched to text mode.")
                    continue
                
                print("\nüé§ Listening...")
                try:
                    result = await ai_friend.voice_chat(listen_timeout=5)
                    
                    if result:
                        response = result.get('response', 'Sorry, I had trouble responding.')
                        print(f"\nüîä AI Friend: {response}\n")
                    else:
                        print("No speech detected. Try again.\n")
                except Exception as e:
                    logger.error(f"Voice error: {e}")
                    print(f"Voice error: {e}\n")
        
        except KeyboardInterrupt:
            print("\n\nGoodbye! üëã")
            break
        except Exception as e:
            logger.error(f"Unexpected error: {e}")
            import traceback
            traceback.print_exc()
            print(f"Unexpected error: {e}\n")

async def api_mode(host: str = "0.0.0.0", port: int = 8000):
    """Run as API server"""
    import uvicorn
    from api import app
    
    logger.info(f"Starting API server on {host}:{port}")
    print(f"\nüöÄ AI Friend API Server")
    print(f"üì° Running on: http://{host}:{port}")
    print(f"üìö Docs: http://{host}:{port}/docs")
    print("\nPress Ctrl+C to stop\n")
    
    config = uvicorn.Config(app, host=host, port=port, log_level="info")
    server = uvicorn.Server(config)
    await server.serve()

def main():
    parser = argparse.ArgumentParser(description="AI Friend System")
    parser.add_argument(
        '--mode',
        choices=['interactive', 'api'],
        default='interactive',
        help='Run mode: interactive chat or API server'
    )
    parser.add_argument(
        '--host',
        default='0.0.0.0',
        help='API server host (default: 0.0.0.0)'
    )
    parser.add_argument(
        '--port',
        type=int,
        default=8000,
        help='API server port (default: 8000)'
    )
    
    args = parser.parse_args()
    
    try:
        if args.mode == 'interactive':
            asyncio.run(interactive_mode())
        else:
            asyncio.run(api_mode(args.host, args.port))
    except KeyboardInterrupt:
        print("\n\nShutting down gracefully...")
    except Exception as e:
        logger.error(f"Fatal error: {e}")
        import traceback
        traceback.print_exc()

if __name__ == "__main__":
    main()